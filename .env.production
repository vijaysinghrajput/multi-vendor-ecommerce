# Production Environment Configuration
# This file is used when MODE=prod or NODE_ENV=production

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
NODE_ENV=production
MODE=prod
ENVIRONMENT=production

# =============================================================================
# DATABASE CONFIGURATION (Production PostgreSQL)
# =============================================================================
DB_TYPE=postgres
DB_HOST=your-production-db-host.com
DB_PORT=5432
DB_USERNAME=your_prod_db_user
DB_PASSWORD=your_super_secure_prod_password
DB_NAME=multi_vendor_ecommerce_prod
DB_SCHEMA=public
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_SSL=true

# Database URL (alternative format)
DATABASE_URL=postgresql://your_prod_db_user:your_super_secure_prod_password@your-production-db-host.com:5432/multi_vendor_ecommerce_prod?sslmode=require

# =============================================================================
# BACKEND SERVER CONFIGURATION
# =============================================================================
BACKEND_PORT=3000
BACKEND_HOST=0.0.0.0
BACKEND_URL=https://api.yourdomain.com
API_PREFIX=api
API_VERSION=v1
API_BASE_URL=https://api.yourdomain.com/api/v1

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_PORT=3001
FRONTEND_HOST=0.0.0.0
FRONTEND_URL=https://yourdomain.com
NEXT_PUBLIC_API_URL=https://api.yourdomain.com/api/v1
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com
NEXT_PUBLIC_ENVIRONMENT=production

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# NextAuth Configuration
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your-super-secure-nextauth-secret-min-32-chars

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com,https://admin.yourdomain.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_DEST=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# =============================================================================
# EMAIL CONFIGURATION (Production - Use your email service)
# =============================================================================
MAIL_HOST=smtp.youremailprovider.com
MAIL_PORT=587
MAIL_USERNAME=your-production-email@yourdomain.com
MAIL_PASSWORD=your-secure-email-password
MAIL_FROM=noreply@yourdomain.com
MAIL_FROM_NAME=Multi-Vendor Ecommerce

# =============================================================================
# SMS CONFIGURATION (Production - Twilio)
# =============================================================================
TWILIO_ACCOUNT_SID=your-production-twilio-account-sid
TWILIO_AUTH_TOKEN=your-production-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION (Production/Live Keys)
# =============================================================================
# Razorpay Live Keys
RAZORPAY_KEY_ID=rzp_live_your_live_key_id
RAZORPAY_KEY_SECRET=your_live_key_secret
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_live_your_live_key_id

# Stripe Live Keys
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key
STRIPE_SECRET_KEY=sk_live_your_live_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret

# =============================================================================
# AWS S3 CONFIGURATION (Production)
# =============================================================================
AWS_ACCESS_KEY_ID=your-production-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-production-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-production-bucket-name
AWS_S3_URL=https://your-production-bucket-name.s3.amazonaws.com

# =============================================================================
# REDIS CONFIGURATION (Production)
# =============================================================================
REDIS_HOST=your-production-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_DB=0
REDIS_URL=redis://:your-secure-redis-password@your-production-redis-host.com:6379

# =============================================================================
# SOCIAL LOGIN CONFIGURATION (Production)
# =============================================================================
# Google OAuth
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-production-google-client-id

# Facebook OAuth
FACEBOOK_APP_ID=your-production-facebook-app-id
FACEBOOK_APP_SECRET=your-production-facebook-app-secret
NEXT_PUBLIC_FACEBOOK_APP_ID=your-production-facebook-app-id

# Apple OAuth
APPLE_CLIENT_ID=your-production-apple-client-id
APPLE_CLIENT_SECRET=your-production-apple-client-secret

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your-production-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-production-linkedin-client-secret

# =============================================================================
# ANALYTICS & TRACKING (Production)
# =============================================================================
NEXT_PUBLIC_GA_TRACKING_ID=GA-XXXXXXXXX-X
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=your-production-facebook-pixel-id
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-production-google-maps-api-key

# =============================================================================
# FIREBASE CONFIGURATION (Production)
# =============================================================================
NEXT_PUBLIC_FIREBASE_API_KEY=your-production-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-production-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-production-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-production-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# APPLICATION METADATA
# =============================================================================
NEXT_PUBLIC_APP_NAME=Multi-Vendor Ecommerce
NEXT_PUBLIC_APP_DESCRIPTION=A comprehensive multi-vendor e-commerce platform
NEXT_PUBLIC_COMPANY_NAME=Your Company Name
NEXT_PUBLIC_SUPPORT_EMAIL=support@yourdomain.com
NEXT_PUBLIC_APP_VERSION=1.0.0

# =============================================================================
# FEATURE FLAGS (Production)
# =============================================================================
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
DEBUG=false
LOG_LEVEL=error
ENABLE_SWAGGER=false
ENABLE_PLAYGROUND=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
DEPLOY_SERVER_HOST=your-vps-server-ip-or-domain.com
DEPLOY_SERVER_USER=your-server-username
DEPLOY_SERVER_PASSWORD=your-server-password
DEPLOY_SERVER_PORT=22
DEPLOY_BACKEND_PATH=/var/www/multi-vendor-ecommerce
DEPLOY_SERVER_PORT=3000

# =============================================================================
# VERCEL CONFIGURATION
# =============================================================================
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-vercel-org-id
VERCEL_PROJECT_ID=your-vercel-project-id
ENABLE_VERCEL_DEPLOY=true

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.com.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.com.key
SSL_CA_PATH=/etc/ssl/certs/ca-certificates.crt

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_FILE_PATH=/var/log/multi-vendor-ecommerce/app.log
ERROR_LOG_PATH=/var/log/multi-vendor-ecommerce/error.log

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================
# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#deployments

# Email Notifications
NOTIFICATION_EMAIL=admin@yourdomain.com
SMTP_NOTIFICATION_HOST=smtp.yourdomain.com
SMTP_NOTIFICATION_PORT=587
SMTP_NOTIFICATION_USER=notifications@yourdomain.com
SMTP_NOTIFICATION_PASS=your-notification-email-password