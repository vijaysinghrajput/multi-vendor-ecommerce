# Deployment Environment Variables
# Copy this file to .env.deploy and customize the values
# These variables will override the default configuration in deploy.config.js

# Server Configuration
DEPLOY_HOST=node-api.skyablyitsolution.com
DEPLOY_USER=developer1
DEPLOY_PASS=Skyably@411
DEPLOY_PORT=22
DEPLOY_BACKEND_PATH=/var/www/wise-lifescience/backend
DEPLOY_SERVER_PORT=3000

# Application Configuration
DEPLOY_APP_NAME=wise-lifescience-api
DEPLOY_ENV=production
DEPLOY_GIT_BRANCH=main
CLIENT_NAME=wise-lifescience
APP_VERSION=1.0.0

# Deployment Options
DEPLOY_RUN_MIGRATIONS=true
DEPLOY_INSTALL_DEPS=true
DEPLOY_BUILD_APP=true
DEPLOY_UPDATE_FRONTEND=true
DEPLOY_RESTART_PM2=true

# PM2 Configuration
PM2_INSTANCES=1
PM2_EXEC_MODE=fork

# Security Configuration (Optional)
# USE_SSH_KEYS=true
# SSH_KEY_PATH=/path/to/your/private/key

# Database Sync Settings
DB_SYNC_ENABLED=true
DB_BACKUP_BEFORE_SYNC=true
DB_SQL_FILE=schema.sql
DB_UPLOAD_SQL=false
DB_RUN_SQL=false
DB_BACKUP_ENABLED=true
DB_BACKUP_PATH=/var/backups/databases
DB_BACKUP_RETENTION=7

# Vercel Integration (DISABLED - User will manage manually)
VERCEL_DEPLOY_ENABLED=false
VERCEL_PROJECT_NAME=multi-vendor-ecommerce
# VERCEL_TEAM_ID=your_team_id
# VERCEL_TOKEN=your_vercel_token
VERCEL_DOMAIN=multi-vendor-ecommerce.vercel.app
VERCEL_WAIT_DEPLOY=false
VERCEL_TIMEOUT=300000

# GitHub Integration
GITHUB_INTEGRATION_ENABLED=true
# GITHUB_TOKEN=your_github_token
GITHUB_REPOSITORY=multi-vendor-ecommerce
GITHUB_OWNER=vijaysinghrajput
GITHUB_BRANCH=main
GITHUB_AUTO_COMMIT=true
GITHUB_COMMIT_MESSAGE="chore: automated deployment update"
GITHUB_AUTO_PUSH=true

# Multi-Client Support
MULTI_CLIENT_ENABLED=false
MULTI_CLIENT_BASE_PATH=/var/www

# Development Options
# DEPLOY_DRY_RUN=true
# DEPLOY_VERBOSE=true
# DEPLOY_LOG_LEVEL=debug

# Skip Steps (for development)
# DEPLOY_SKIP_UPLOAD=false
# DEPLOY_SKIP_BUILD=false
# DEPLOY_SKIP_MIGRATIONS=false
# DEPLOY_SKIP_DB_SYNC=false
# DEPLOY_SKIP_VERCEL=false
# DEPLOY_SKIP_GITHUB=false

# Backup Configuration (Optional)
# DEPLOY_BACKUP_ENABLED=true

# Notification Configuration (Optional)
# DEPLOY_NOTIFICATIONS_ENABLED=true
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# SLACK_CHANNEL=#deployments
# EMAIL_NOTIFICATIONS_ENABLED=true
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# NOTIFICATION_EMAIL=admin@yourcompany.com
# NOTIFICATION_FROM_EMAIL=deployments@yourcompany.com