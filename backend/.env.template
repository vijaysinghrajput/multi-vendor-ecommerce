# Backend Environment Template
# Copy this file to .env and fill in your actual values

# Application Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1
APP_NAME=Multi-Vendor E-Commerce
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:3001

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=multi_vendor_ecommerce
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/multi_vendor_ecommerce

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_at_least_32_chars
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
FROM_EMAIL=your_email@gmail.com
FROM_NAME=Multi-Vendor E-Commerce

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_key_at_least_32_characters_long

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# Defaults
DEFAULT_CURRENCY=USD
DEFAULT_LANGUAGE=en
DEFAULT_TIMEZONE=UTC
