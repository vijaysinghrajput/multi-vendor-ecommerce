# Database Deployment Configuration
# Copy this file to .env.database and configure your database settings

# ===========================================
# DEVELOPMENT DATABASE CONFIGURATION
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=mac
DB_PASSWORD=
DB_NAME=multi_vendor_ecommerce

# ===========================================
# PRODUCTION DATABASE CONFIGURATION
# ===========================================
PROD_DB_HOST=localhost
PROD_DB_PORT=5432
PROD_DB_USERNAME=developer1
PROD_DB_PASSWORD=Skyably@411
PROD_DB_NAME=wise_lifescience

# ===========================================
# DATABASE DEPLOYMENT OPTIONS
# ===========================================

# Backup production database before sync (recommended)
DB_BACKUP_BEFORE_SYNC=true

# Sync database schema from development to production
DB_SYNC_SCHEMA=true

# Sync database data from development to production (use with caution)
DB_SYNC_DATA=false

# Run TypeORM migrations on production
DB_RUN_MIGRATIONS=true

# Create essential database tables using schema.sql
DB_CREATE_TABLES=true

# Insert seed data (admin user, demo data)
DB_INSERT_SEED_DATA=false

# ===========================================
# SERVER CONFIGURATION
# ===========================================
DEPLOY_HOST=31.97.207.193
DEPLOY_USER=developer1
DEPLOY_PASS=Skyably@411
DEPLOY_BACKEND_PATH=/var/www/clients/wise-lifescience/backend

# ===========================================
# ADVANCED OPTIONS
# ===========================================

# Skip specific deployment steps
DEPLOY_SKIP_DB_SYNC=false
DEPLOY_SKIP_MIGRATIONS=false
DEPLOY_SKIP_BUILD=false
DEPLOY_SKIP_UPLOAD=false

# Enable verbose logging
DEPLOY_VERBOSE=false

# Dry run mode (show what would be done without executing)
DEPLOY_DRY_RUN=false

# ===========================================
# BACKUP CONFIGURATION
# ===========================================

# Enable database backups
DB_BACKUP_ENABLED=true

# Backup retention (days)
DB_BACKUP_RETENTION=7

# Backup path on server
DB_BACKUP_PATH=/var/backups/databases

# Compress backups
DB_COMPRESS_BACKUP=true

# ===========================================
# SECURITY SETTINGS
# ===========================================

# Use SSH keys instead of password (recommended for production)
USE_SSH_KEYS=false

# Path to SSH private key
SSH_KEY_PATH=~/.ssh/id_rsa

# ===========================================
# NOTIFICATION SETTINGS
# ===========================================

# Enable deployment notifications
DEPLOY_NOTIFICATIONS_ENABLED=false

# Slack webhook URL for notifications
SLACK_WEBHOOK_URL=

# Email notifications
EMAIL_NOTIFICATIONS_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=
NOTIFICATION_FROM_EMAIL=

# ===========================================
# MULTI-CLIENT CONFIGURATION
# ===========================================

# Enable multi-client deployment
MULTI_CLIENT_ENABLED=false

# Current client name
CLIENT_NAME=wise-lifescience

# Base path for multi-client deployments
MULTI_CLIENT_BASE_PATH=/var/www